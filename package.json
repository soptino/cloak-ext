{
  "name": "cloak-security-gateway",
  "displayName": "Cloak - AI Security Gateway",
  "description": "Local-first security layer for VS Code AI interactions that detects and neutralizes prompt injection attacks",
  "version": "0.0.1",
  "publisher": "cloak-security",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "security",
    "ai",
    "prompt-injection",
    "llm",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "cloak.securityGateway",
        "name": "cloak",
        "description": "Security gateway for AI interactions",
        "isSticky": false
      }
    ],
    "commands": [
      {
        "command": "cloak.showStatus",
        "title": "Cloak: Show Security Status"
      },
      {
        "command": "cloak.analyzePrompt",
        "title": "Cloak: Analyze Prompt for Security Threats"
      },
      {
        "command": "cloak.showPerformance",
        "title": "Cloak: Show Performance Statistics"
      },
      {
        "command": "cloak.openSettings",
        "title": "Cloak: Open Settings"
      }
    ],
    "configuration": {
      "title": "Cloak Security Gateway",
      "properties": {
        "cloak.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:1234/v1",
          "description": "URL of the local Ollama API endpoint"
        },
        "cloak.threatSensitivity": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "default": "medium",
          "description": "Sensitivity level for threat detection"
        },
        "cloak.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable audit logging for security decisions"
        },
        "cloak.maxPromptLength": {
          "type": "number",
          "default": 10000,
          "description": "Maximum prompt length to analyze"
        },
        "cloak.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout in milliseconds for Ollama API calls"
        },
        "cloak.systemPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom system prompt for security classification. Leave empty to use the default prompt.",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "fast-check": "^3.14.0",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
